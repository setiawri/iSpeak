@model IEnumerable<iSpeakWebApp.Models.UserAccountRolesModel>

@{
    iSpeakWebApp.Models.UserAccountRolesModel access = iSpeakWebApp.Controllers.UserAccountsController.getUserAccess(Session);
    ViewBag.SelectedNavigationMenu = "Settings";
    ViewBag.Title = "Roles";
    ViewBag.Subtitle = "Index";
}

<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">
        <!-- Form inputs -->
        <div class="card animated bounceInLeft">
            <div class="card-header header-elements-inline">
                <h5 class="card-title text-uppercase">@ViewBag.Title</h5>
            </div>
            <div class="card-body">
                @if (access.UserAccountRoles_Add)
                {
                    <div class="mr-2">
                        <a href="@Url.Action("Create", "UserAccountRoles")" class="btn btn-sm btn-success"><i class="icon-plus22 mr-2"></i>CREATE</a>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-hover datatable">
                        <thead>
                            <tr>
                                <th style="width:300px;">@Html.DisplayNameFor(model => model.Name)</th>
                                <th class="non-searchable non-sortable"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>
                                        @if (access.UserAccountRoles_Edit)
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:• 
                                        }
                                        <a href="javascript:void(0)" onclick="Log('@item.Id')">Log</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /form inputs -->
    </div>
    <!-- /content area -->
</div>

<script type="text/javascript">

    $(document).ready(function () {

    });
</script>