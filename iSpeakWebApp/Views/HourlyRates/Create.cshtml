@model iSpeakWebApp.Models.HourlyRatesModel

@{
    iSpeakWebApp.Models.UserAccountRolesModel access = iSpeakWebApp.Controllers.UserAccountsController.getUserAccess(Session);
    string ControllerName = "HourlyRates";
    ViewBag.SelectedNavigationMenu = "Internal";
    ViewBag.Title = "PAYRATES";
    ViewBag.Subtitle = "Create";
}

<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <!-- Form inputs -->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title text-uppercase">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    <fieldset class="mb-3">
                        <legend class="text-uppercase font-size-sm font-weight-bold">@ViewBag.Subtitle</legend>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.UserAccounts_Id, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-4">
                                <select class="form-control" id="UserAccounts_Id" name="UserAccounts_Id"></select>
                                @Html.ValidationMessage("UserAccounts_Id", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Branches_Id, htmlAttributes: new { @class = "col-form-label col-lg-2" })
                            <div class="col-lg-4">
                                @Html.DropDownListFor(model => model.Branches_Id, ViewBag.Branches as SelectList, "Pilih", new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.Branches_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.LessonPackages_Id, htmlAttributes: new { @class = "col-form-label col-lg-2" })
                            <div class="col-lg-4">
                                @Html.DropDownListFor(model => model.LessonPackages_Id, ViewBag.LessonPackages as SelectList, "Pilih", new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.LessonPackages_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-2">
                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control positiveintegeronly" } })
                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.FullTimeTutorPayrate, htmlAttributes: new { @class = "col-form-label col-lg-2" })
                            <div class="col-lg-2">
                                @Html.EditorFor(model => model.FullTimeTutorPayrate, new { htmlAttributes = new { @class = "form-control positiveintegeronly" } })
                                @Html.ValidationMessageFor(model => model.FullTimeTutorPayrate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-form-label col-lg-2" })
                            <div class="col-lg-2">
                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>

                    @if (access.HourlyRates_Add)
                    {
                        <div>
                            <button type="submit" onclick="showLoadingSpinner()" class="btn btn-primary"><i class="icon-paperplane mr-2"></i>Submit</button>
                            <a href="javascript:void(0)" onclick="Action('Index', '@ControllerName')" class="btn btn-warning"><i class="icon-cross2 mr-2"></i>Cancel</a>
                        </div>
                    }
                </div>
            </div>
            <!-- /form inputs -->
        }
    </div>
    <!-- /content area -->

</div>

<script type="text/javascript">

    $(document).ready(function () {

    });

    function applyLast() {
        AjaxGetDropdownlistData('UserAccounts_Id', 'GetDropDownListData', 'UserAccounts');
    }

</script>
